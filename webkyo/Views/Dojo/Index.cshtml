@model IEnumerable<Kyo.Dojo>
@{
    ViewBag.Title = "Listado de Dojos";
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>

<div class="pull-right">
    <a href="@Url.Action("Create", "Dojo")" class="btn btn-default">
        Nuevo
        <span class="glyphicon glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
    </div>
    <div class="col-md-12 table-responsive">
        <table id="mytable" class="table table-bordred table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Direccion)
                    </th>
                    <th style="width:5px;"></th>
                    <th style="width:5px;"></th>
                    <th style="width:5px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Details"><a class="btn btn-success btn-xs" href="@Url.Action("Details", "Dojo", new { id = item.Id })"><span class="glyphicon glyphicon-search"></span></a></p></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-primary btn-xs" href="@Url.Action("Edit", "Dojo", new { id = item.Id })"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-danger btn-xs" href="@Url.Action("Delete", "Dojo", new { id = item.Id })"><span class="glyphicon glyphicon-trash"></span></a></p></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
