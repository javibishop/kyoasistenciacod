@model Kyo.Entidades.Alumno

@{
    ViewBag.Title = "Detalles de " + @Model.Nombre + " " + @Model.Apellido;
    var sexo = @Model.Sexo == 1 ? "M" : "F"; 

}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>

<div class="container">
    <h4>Alumno</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="col-lg-4">
            <span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt class="col-lg-4">
            <span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span>
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt class="col-lg-4">
            <span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span>
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefono)
        </dd>


        <dt class="col-lg-4">
            <span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>


        <dt class="col-lg-4">
            <span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span>
            @Html.DisplayNameFor(model => model.Edad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Edad)
        </dd>

        <dt class="col-lg-4">
            <span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span>
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>

        <dd>
            @Html.DisplayFor(model => sexo)
        </dd>
    </dl>

    <div class="pull-right">
        <a href="@Url.Action("Index", "Alumno")" class="btn btn-default">
            Volver al listado
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        </a>
    </div>
    <div class="pull-right">
        <a href="@Url.Action("Edit", "Alumno", new { id = Model.Id })" class="btn btn-success">
            Editar
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
        </a>
    </div>
</div>
