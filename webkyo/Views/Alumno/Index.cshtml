@model IEnumerable<Kyo.Entidades.Alumno>

@{
    ViewBag.Title = "Listado de Alumnos";
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>

<div class="pull-right">
    <a href="@Url.Action("Create", "Alumno")" class="btn btn-default">
        <span class="glyphicon glyphicon glyphicon-plus" aria-hidden="true"> Nuevo</span>
    </a>
</div>
    <div class="col-md-12 table-responsive">
        <table id="mytable" class="table table-bordred table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apellido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefono)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Edad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sexo)
                    </th>
                    <th style="width:5px;"></th>
                    <th style="width:5px;"></th>
                    <th style="width:5px;"></th>
                    <th style="width:5px;"></th>
                    <th style="width:5px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var sexo = item.Sexo == 1 ? "F" : "M";
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Edad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => sexo)
                        </td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Ver Asistencia"><a class="btn btn-info btn-xs" href="@Url.Action("VerAsistencia", "Alumno", new { id = item.Id})"><span class="glyphicon glyphicon-th-list"></span></a></p></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Asistencia Grafico"><a class="btn btn-info btn-xs" href="@Url.Action("Graph", "Asistencia", new { alumnoid = item.Id})"><span class="glyphicon glyphicon-stats"></span></a></p></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Ver Examen"><a class="btn btn-info btn-xs" href="@Url.Action("VerExamen", "Alumno", new { id = item.Id})"><span class="glyphicon glyphicon-list-alt"></span></a></p></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Detalle"><a class="btn btn-success btn-xs" href="@Url.Action("Details", "Alumno", new { id = item.Id })"><span class="glyphicon glyphicon-search"></span></a></p></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Modificar"><a class="btn btn-primary btn-xs" href="@Url.Action("Edit", "Alumno", new { id = item.Id })"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Borrar"><button class="btn btn-danger btn-xs" data-title="Delete" href="@Url.Action("Delete", "Alumno", new { id = item.Id })"><span class="glyphicon glyphicon-trash"></span></button></p></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
